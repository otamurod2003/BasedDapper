@model User
@{
    ViewBag.Title = "Create new user";
}
<h2 class="text-center">
</h2>
<form method="post" asp-controller="home" asp-action="create">
    <div class="mb-3">
        <label for="UserName" class="form-label">User name</label>
        <input asp-for="@Model.UserName" class="form-control" id="UserName" placeholder="Sergey Laguchev...">
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
    </div>
    <div class="mb-3">
        <label for="Age" class="form-label">Age</label>
        <input class="form-control" id="Age" placeholder="12..." asp-for="@Model.Age">
        <span class="text-danger" asp-validation-for="@Model.Age"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary" id="createButton">Create</button>
    </div>
</form>


