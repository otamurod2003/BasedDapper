@model List<User>

@{
    ViewBag.Title = "All users";
    var users = ViewBag.AllUsers;
}
<div>
    <h2 class="text-center">List Users</h2>
    <a asp-controller="home" asp-action="create" class="btn btn-secondary m-2">Add new user</a>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-center">
            <th>User Id </th>
            <th>User Name </th>
            <th>Age </th>
            <th>Navigation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Age</td>
                <td>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@item.Id" class=" btn m-2 btn-warning">Edit</a>
                    <a asp-controller="home" asp-action="delete" asp-route-id="@item.Id" class=" btn m-2 btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>