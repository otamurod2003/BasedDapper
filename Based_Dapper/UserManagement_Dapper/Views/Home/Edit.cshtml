@model User
@{
    ViewBag.Title = "Update user";
}
<form method="post" asp-controller="home" asp-action="edit">
    <div class="mb-3">
        <label for="UserName" class="form-label">User name</label>
        <input asp-for="@Model.UserName" class="form-control" id="UserName" placeholder="Sergey Laguchev...">
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
    </div>
    <div class="mb-3">
        <label for="Age" class="form-label">Age</label>
        <input class="form-control" id="Age" placeholder="12..." asp-for="@Model.Age">
        <span class="text-danger" asp-validation-for="@Model.Age"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Edit</button>
        <a class="btn btn-primary" asp-controller="home" asp-action="index">Back</a>
    </div>
</form>